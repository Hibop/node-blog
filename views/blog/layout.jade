//- 前端layout

extends ../layout

append styles
	link(rel='stylesheet', href='/stylesheets/fe.css')

block content

	block header
		div.blog-masthead
			div.container
				nav.blog-nav.pull-left
					if pageName === '/articles'
						a(class='blog-nav-item active', href='/') 首页
					else						 					
						a(class='blog-nav-item', href='/') 首页

					if pageName === '/contact'
						a(class='blog-nav-item active', href='/contact') 联系
					else
						a(class='blog-nav-item', href='/contact') 联系

					if pageName === '/about'
						a(class='blog-nav-item active', href='/about') 关于
					else
						a(class='blog-nav-item', href='/about') 关于

				form.navbar-form.pull-left(method='get', action='/articles/')
					input.form-control.keyword(type='text', name='keyword', value=keyword || '', placeholder='标题搜索..')
				ul.nav.navbar-nav.navbar-right
					li
						a(href='/admin/users/login') 登陆
					li
						a(href='/admin/users/register') 注册			
			
	.container
		.row
			.col-sm-8.blog-main
				!= messages()
				block main
			.col-sm-3.col-sm-offset-1.blog-sidebar
				.sidebar-module.sidebar-module-inset
					h4 关于
					p 一个程序员的故事.
					p 一段不一样的旅程.
					.sidebar-module
						h4 文章分类
						ol.list-unstyled
							each category in categories
								li 
									a(href='/articles/category/' + category.name, target='_blank')= category.name

					.sidebar-module
						h4 友情链接
						ol.list-unstyled
							li
								a(href='') 
									i.fa.fa-github
									|&nbsp; Github
							li
								a(href='') 
									i.fa.fa-twitter
									|&nbsp; Twitter
							li
								a(href='') 
									i.fa.fa-facebook
									|&nbsp; FaceBook
         
	block footer 
		footer.blog-footer
			p 一个博客系统
			p
				a(href='#') 回到顶部
